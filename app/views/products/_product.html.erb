<div class="product">
  
  <p class="name">
    <%= link_to product.name, single_product_path(product) %>
  </p>

  <% if product.image_filename != '' %> 
    <p class="image">
      <%= image_tag product.image_filename, {height: 150} %>
    </p>
  <% else %>
    <div class="no_image">
      <p>No Image Available.</p>  
    </div>
  <% end %>

  <p class="price">
    <strong>Price:</strong> <%= number_to_currency product.price %>
  </p>

  <% if product.category %>
    <p>
      <strong>Category:</strong> <%= product.category.name %>
    </p>
  <% end %>

  <%= render partial: "shopping", :locals => {:product => product} %>
  
</div>