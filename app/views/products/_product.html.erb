<section class="product">
  
  <p class="name">
    <%= product.name %>
  </p>

  <%= if product.image_filename != '' then image_tag product.image_filename , {height: 150} end %>

  <p class="price">
    <strong>Price:</strong> <%= number_to_currency product.price %>
  </p>

  <div class="description">
    <%= product.description %>
  </div>
  <% if product.category %>
    <p>
      <strong>Category:</strong> <%= product.category.name %>
    </p>
  <% end %>
</section>